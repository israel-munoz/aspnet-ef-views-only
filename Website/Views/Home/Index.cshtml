@{ Layout = null; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <div class="controls">
        <div class="control">
            <label for="databases">Select database</label>
            <select id="databases"></select>
        </div>
        <div class="button">
            <button id="load-users">Load users</button>
        </div>
    </div>
    <div class="grid">
        <table id="users-grid">
            <colgroup>
                <col class="small center" />
                <col class="big" />
                <col class="big" />
                <col class="small center" />
            </colgroup>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Birthdate</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>
